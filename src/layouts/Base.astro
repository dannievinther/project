---
// src/layouts/Base.astro
const {title} = Astro.props;
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

---
<!DOCTYPE html>
<html lang="da">
<head>
    <Head title={title}/>
    <style>
    @font-face {
        font-family: "Wotfard";
        src: url("/assets/fonts/wotfard-semibold.woff2") format("woff2");
        font-style: normal;
        font-weight: 500;
        text-rendering: optimizeLegibility;
    }
        @font-face {
        font-family: "Wotfard";
        src: url("/assets/fonts/wotfard-medium.woff2") format("woff2");
        font-style: normal;
        font-weight: 400;
        text-rendering: optimizeLegibility;
    }
        @font-face {
        font-family: "Wotfard";
        src: url("/assets/fonts/wotfard-regular.woff2") format("woff2");
        font-style: normal;
        font-weight: 300;
        text-rendering: optimizeLegibility;
    }
    </style>
</head>
<body>

    <Header />

    <main>
    <!-- slot: your page content will be injected here. -->
    <slot />
  </main>

    <Footer />

    <script src="/script/bliss.js"></script>
    <script src="/script/prism.js"></script>
    <script src="/script/prism-live.js"></script>
    <script src="/script/prism-live-markup.js"></script>
    <script src="/script/prism-live-css.js"></script>
    <script type="module" src="/script/custom.js"></script>
</body>
</html>

