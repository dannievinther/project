---
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---
<html lang="da">
<head>
  <Head title="404" />
    <style>
        @font-face {
          font-family: "Wotfard";
          src: url("/assets/fonts/wotfard-regular.woff2") format("woff2");
          font-style: normal;
          font-weight: 300;
          text-rendering: optimizeLegibility;
        }
        body {
          display: grid;
          grid-template-rows: auto 1fr auto;
          min-block-size: 100vh;
        }
        main {
            place-items: start center;
        }
    </style>
</head>
<body>

    <header class="main-header">
      <h1 aria-label="404 Page not found!">
        4<span class="stroke-text">0</span>4
      </h1>
    </header>
    <main>
      <section>
        <article>
          <h2>Page was not found</h2>
          <p>Try again, or go <a href="./">back to the exercises</a>.</p>
        </article>
      </section>
    </main>

    <Footer />

    <script src="/script/bliss.js"></script>
    <script src="/script/prism.js"></script>
    <script src="/script/prism-live.js"></script>
    <script src="/script/prism-live-markup.js"></script>
    <script src="/script/prism-live-css.js"></script>
    <script type="module" src="/script/custom.js"></script>
</body>
</html>
